<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutFiche"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@color/LightSkyBlue"
    android:orientation="vertical" >
    <ImageView 
      android:id="@+id/idev"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" 
      android:layout_gravity="center_vertical|center_horizontal"     
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="20dp"
      android:src="@drawable/idev" 
       />
    <TextView 
        android:id="@+id/nameenquete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:layout_gravity="center_vertical|center_horizontal"
        />
  <!--   <EditText 
            android:id="@+id/idenqueteur"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/idenqueteur"
            android:paddingBottom="15dp"
           />  -->
    
    <TextView 
        android:id="@+id/labelr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        
        android:paddingBottom="5dp"
        android:layout_gravity="center_vertical|center_horizontal"
        />
    
    <TextView android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:textColor="#dc6800"/>
     <EditText 
       android:id="@+id/question"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:visibility="invisible"
       
       />
    <Spinner 
       android:id="@+id/questionsp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:visibility="invisible"
       
       />
    <RelativeLayout >
     <Button 
        android:text="Précédent"
        android:id="@+id/prec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        
        
        />
    <Button 
        android:text="Suivant"
        android:id="@+id/suivant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
             
        />
    </RelativeLayout>
  
  <TextView android:id="@+id/idr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
   <TextView 
            android:id="@+id/idquestion"
             android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
           />
     <TextView android:id="@+id/typequestion"
             android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
           />
    
</LinearLayout>
